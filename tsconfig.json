{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@lilly/components/*": ["components/*"],
      "@lilly/components": ["components"],
      "@lilly/styles/*": ["styles/*"],
      "@lilly/styles": ["styles"],
      "@lilly/hooks/*": ["hooks/*"],
      "@lilly/hooks": ["hooks"],
      "@lilly/utils/*": ["utils/*"],
      "@lilly/utils": ["utils"],
      "@lilly/constants/*": ["constants/*"],
      "@lilly/constants": ["constants"],
      "@lilly/configs/*": ["configs/*"],
      "@lilly/configs": ["configs"],
      "@lilly/types/*": ["types/*"],
      "@lilly/types": ["types"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
